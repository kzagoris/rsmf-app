{
    "name": "rsmf-app",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "start": "npm run dev",
        "dev": "vite --host",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "emulators:start": "firebase emulators:start --only auth,firestore,storage,functions --inspect-functions --import=rsmf-project-firebase-emulators-data --export-on-exit",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx src/ --fix && prettier --write \"./src/**/*.{ts,js,jsx,tsx}\"",
        "deploy": "npm run build && npm run build --prefix functions && firebase deploy --only hosting,functions"
    },
