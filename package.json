        "@mui/x-data-grid": "^6.0.0",
        "@mui/x-date-pickers": "^6.0.2",
        "dayjs": "^1.11.7",
        "face-api.js": "^0.22.2",
        "firebase": "^11.0.0",
        "i18next": "~23.5.1",
        "i18next-browser-languagedetector": "^7.1.0",
        "i18next-http-backend": "^2.2.1",
        "peerjs": "^1.4.7",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-firebase-hooks": "^5.1.1",
